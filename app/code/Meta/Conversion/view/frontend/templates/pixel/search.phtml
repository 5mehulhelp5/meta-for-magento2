<?php
/** @var \Meta\Conversion\Block\Pixel\Search $block */

$trackerUrl = $block->getTrackerUrl();
?>

<!-- Component to track server events -->
<script type="text/x-magento-init">
    {
        "*": {
            "Meta_Conversion/js/metaPixelTracker" : {
                "url" : "<?= $block->escapeJs($trackerUrl); ?>",
                "payload": <?= json_encode([
                    "eventName" => $block->getEventToObserveName(),
                    "searchQuery" => $block->getSearchQuery()
                ]) ?>
            }
        }
    }
</script>

<?php
if ($block->getFacebookPixelID()) {
?>
    <script>
        fbq('set', 'agent', '<?= $block->getFacebookAgentVersion() ?>', '<?= $block->getFacebookPixelID() ?>');
        fbq('track', 'Search', {
                source: "<?= $block->getSource() ?>",
                pluginVersion: "<?= $block->getPluginVersion() ?>",
                search_string: "<?= $block->getSearchQuery() ?>"
            }
            , {
                eventID: "<?= $block->getEventId() ?>"
            }
        );
    </script>
    <?php $block->logEvent($block->getFacebookPixelID(), 'Search') ?>
<?php } ?>
