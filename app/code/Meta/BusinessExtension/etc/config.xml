<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <facebook>
            <business_extension>
                <active>1</active>
                <onsite>0</onsite>
                <meta_exception_logging_enabled>1</meta_exception_logging_enabled>
                <meta_telemetry_logging_enabled>0</meta_telemetry_logging_enabled>
            </business_extension>
            <catalog_management>
                <product_identifier>sku</product_identifier>
            </catalog_management>
            <debug>
                <debug_mode>1</debug_mode>
            </debug>
            <!-- Internal. Overrides default graph base URL
            <internal>
                <graph_base_url>
                    https://graph.facebook.com/
                </graph_base_url>
            </internal> -->
        </facebook>
    </default>
